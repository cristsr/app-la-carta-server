{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./app/dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@database/*": ["src/database/*"],
      "@config/*": ["src/config/*"],
      "assets/*": ["src/assets/*"],
      "@mail/*": ["src/mail/*"]
    }
  }
}
